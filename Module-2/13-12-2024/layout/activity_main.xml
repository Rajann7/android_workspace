<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_margin="50dp"
            android:text="AMUL PRODUCTS"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/im1"
            android:layout_below="@id/text1" />

        <TextView
            android:id="@+id/texta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BUTTER"
            android:textSize="30sp"
            android:layout_below="@id/image"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            />

        <ImageView
            android:id="@+id/image2"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/texta1"
            android:layout_marginTop="18dp"
            android:src="@drawable/im2" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMUL CHEESE"
            android:layout_below="@id/image2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/image3"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text2"
            android:layout_marginTop="18dp"
            android:src="@drawable/im3" />
        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SRIKHAND"
            android:layout_below="@id/image3"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/image4"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text3"
            android:layout_marginTop="18dp"
            android:src="@drawable/im4" />
        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMUL DIAMOND"
            android:layout_below="@id/image4"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/image5"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text4"
            android:layout_marginTop="18dp"
            android:src="@drawable/im5" />
        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MILK CHOCLATE"
            android:layout_below="@id/image5"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/image6"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text5"
            android:layout_marginTop="18dp"
            android:src="@drawable/im6" />
        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SRIKHAND ELAICHI"
            android:layout_below="@id/image6"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/image7"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text6"
            android:layout_marginTop="18dp"
            android:src="@drawable/im6" />
        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMUL CREAM"
            android:layout_below="@id/image7"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />
        <ImageView
            android:id="@+id/image8"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text7"
            android:layout_marginTop="18dp"
            android:src="@drawable/im8" />
        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMUL LITE"
            android:layout_below="@id/image8"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/image9"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text8"
            android:layout_marginTop="18dp"
            android:src="@drawable/im9" />
        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMUL KOOL"
            android:layout_below="@id/image9"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/text9"
            android:layout_marginTop="18dp"
            android:src="@drawable/im10" />
        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AMUL LASSI"
            android:layout_below="@id/image10"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="30dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text10"
            android:text="click me"
            android:textColor="@android:color/background_dark"
            android:layout_margin="50dp"/>




    </RelativeLayout>
</ScrollView>